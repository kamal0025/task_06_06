<!DOCTYPE html>
<html>
  <head>
    <title>Edit Item</title>
  </head>
  <body>
    <h1>Edit Item</h1>
    <form action="/edit/<%= index %>" method="POST">
      <label for="name">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= selectedItem.name %>"
        required
      /><br />
      <label for="price">Price:</label>
      <input
        type="number"
        id="price"
        name="price"
        value="<%= selectedItem.price %>"
        required
      /><br />
      <button type="submit">Update</button>
    </form>
  </body>
</html>
